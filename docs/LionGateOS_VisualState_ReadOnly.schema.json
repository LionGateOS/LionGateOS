{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LionGateOS Visual State (Read-Only)",
  "type": "object",
  "description": "Authoritative visual state provided by LionGateOS. Consumers MUST NOT modify.",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "source": { "type": "string", "const": "LionGateOS" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["version", "source", "timestamp"]
    },
    "mode": {
      "type": "string",
      "enum": ["light", "dark", "system"]
    },
    "palette": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "ambient": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "intensity": { "type": "number", "minimum": 0, "maximum": 1 },
        "motion": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "effects": {
      "type": "object",
      "properties": {
        "glow": { "type": "number", "minimum": 0, "maximum": 1 },
        "sharpness": { "type": "number", "minimum": 0, "maximum": 1 },
        "connection": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "typography": {
      "type": "object",
      "properties": {
        "scale": { "type": "number", "minimum": 0.8, "maximum": 1.5 },
        "fontFamily": { "type": "string" }
      }
    },
    "interaction": {
      "type": "object",
      "properties": {
        "preferredControl": {
          "type": "string",
          "enum": ["wheel", "slider", "auto"]
        }
      }
    }
  },
  "required": ["meta", "mode", "palette", "interaction"]
}